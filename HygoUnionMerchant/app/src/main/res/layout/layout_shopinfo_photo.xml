<?xml version="1.0" encoding="utf-8"?>
<com.gloiot.hygounionmerchant.widget.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                                      android:layout_width="206px"
                                                      android:layout_height="206px"
                                                      app:layout_auto_basewidth="height">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:background="@drawable/__picker_photo_bg"
        android:padding="8px"
        android:scaleType="centerCrop"
        app:layout_auto_baseheight="width"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_alignLeft="@id/iv_photo"
        android:layout_alignTop="@id/iv_photo"
        android:src="@drawable/ic_delete_red"
        android:visibility="gone"
        app:layout_auto_baseheight="width"/>

</com.gloiot.hygounionmerchant.widget.SquareItemLayout>