<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.gloiot.hygounionmerchant.ui.activity.mine.password.ModifyPwdActivity">

    <include
        layout="@layout/include_titlebar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="20px"
        android:background="@color/white">

        <TextView
            style="@style/textview_base_left"
            android:text="原密码"
            android:textColor="@color/gray_666"
            android:textSize="32px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/gray_e5e5e5"/>

        <EditText
            android:id="@+id/et_pwd_original"
            style="@style/edittext_base"
            android:layout_marginLeft="200px"
            android:layout_marginRight="80px"
            android:hint=""
            android:inputType="textPassword"
            android:textColor="@color/black_333"
            android:textColorHint="@color/gray_ccc"
            android:textSize="32px"/>

        <ImageView
            android:id="@+id/iv_eye_1"
            style="@style/imageview_right"
            android:padding="10px"
            android:src="@drawable/ic_eye_close"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white">

        <TextView
            style="@style/textview_base_left"
            android:text="新密码"
            android:textColor="@color/gray_666"
            android:textSize="32px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/gray_e5e5e5"/>

        <EditText
            android:id="@+id/et_pwd_new"
            style="@style/edittext_base"
            android:layout_marginLeft="200px"
            android:layout_marginRight="80px"
            android:inputType="textPassword"
            android:textColor="@color/black_333"
            android:textColorHint="@color/gray_ccc"
            android:textSize="32px"/>

        <ImageView
            android:id="@+id/iv_eye_2"
            style="@style/imageview_right"
            android:padding="10px"
            android:src="@drawable/ic_eye_close"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white">

        <TextView
            style="@style/textview_base_left"
            android:text="再次输入"
            android:textColor="@color/gray_666"
            android:textSize="32px"/>

        <EditText
            android:id="@+id/et_pwd_new_confirm"
            style="@style/edittext_base"
            android:layout_marginLeft="200px"
            android:layout_marginRight="80px"
            android:hint="再次输入以确认"
            android:inputType="textPassword"
            android:textColor="@color/black_333"
            android:textColorHint="@color/gray_ccc"
            android:textSize="32px"/>

        <ImageView
            android:id="@+id/iv_eye_3"
            style="@style/imageview_right"
            android:padding="10px"
            android:src="@drawable/ic_eye_close"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm"
        style="@style/btn_green_pre"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="100px"
        android:text="确定"/>

</LinearLayout>
