<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gloiot.hygounionmerchant.ui.activity.home.shop.ShopScanBarCodeActivity">

    <include
        android:id="@+id/in_titlebar"
        layout="@layout/include_titlebar"/>

    <FrameLayout
        android:id="@+id/fl_my_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/in_titlebar"
        android:visibility="visible">

    </FrameLayout>

    <TextView
        android:id="@+id/tv_hint_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/in_titlebar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:text=""
        android:textColor="@color/gray_e0e0e0"
        android:textSize="32px"/>

    <LinearLayout
        android:id="@+id/ll_manual_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="415dp"
        android:orientation="vertical"
        android:padding="10px"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="手动录入条形码"
            android:textColor="#e0e0e0"
            android:textSize="32px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_e0e0e0"/>
    </LinearLayout>

</RelativeLayout>
