<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.gloiot.hygounionmerchant.ui.activity.home.InputCodeAuthenticationActivity">

    <RelativeLayout
        android:id="@+id/in_titlebar"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/green_21d1c1">

        <ImageView
            android:id="@+id/iv_toptitle_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="30px"
            android:src="@drawable/fanhuibai"/>

        <TextView
            android:id="@+id/tv_toptitle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="36px"/>

        <TextView
            android:id="@+id/tv_toptitle_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:gravity="center"
            android:text=" "
            android:textColor="@color/white"
            android:textSize="32px"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/et_num_for_use"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:background="@drawable/bg_shape_gray_f8f8f8_4dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="请输入使用编号"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black_555"
        android:textColorHint="@color/gray_b4b4b4"
        android:textSize="32px"/>

    <EditText
        android:id="@+id/et_yzm"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:background="@drawable/bg_shape_gray_f8f8f8_4dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="请输入验证码"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black_555"
        android:textColorHint="@color/gray_b4b4b4"
        android:textSize="32px"/>

    <TextView
        android:id="@+id/tv_renzheng"
        style="@style/btn_green_pre"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="60px"
        android:text="认证"/>

</LinearLayout>
