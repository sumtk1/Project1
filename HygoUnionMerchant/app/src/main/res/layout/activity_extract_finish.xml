<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.gloiot.hygounionmerchant.ui.activity.mine.bonus.ExtractFinishActivity">

    <include
        layout="@layout/include_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="388px"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60px"
                    android:src="@drawable/ic_wait"
                    app:layout_auto_baseheight="width"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="提取申请已提交"
                    android:textColor="@color/gray_666"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_wait_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textSize="32px"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="提取详情"
                android:textColor="@color/black_333"
                android:textSize="26px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_account_type"
                    style="@style/textview_base_left"
                    android:text=""
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/tv_bank_card_info"
                    style="@style/text_right_28"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textSize="30px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="提现金额"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/tv_tixian_money"
                    style="@style/text_right_28"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textSize="30px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="手续费"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/tv_service_charge"
                    style="@style/text_right_28"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textSize="30px"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_finish"
                style="@style/btn_green_commit"
                android:layout_marginBottom="30px"
                android:layout_marginTop="60px"
                android:text="完成"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
