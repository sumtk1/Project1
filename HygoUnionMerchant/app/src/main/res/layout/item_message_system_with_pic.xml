<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="24px">

        <TextView
            android:id="@+id/tv_system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_bg_d4d4d4_4px"
            android:padding="11px"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="24px"/>

        <LinearLayout
            android:id="@+id/ll_system"
            android:layout_width="match_parent"
            android:layout_height="260px"
            android:layout_marginTop="24px"
            android:background="@drawable/bg_dialog"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_system_read"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="45px"
                    android:background="@drawable/bg_message_read"/>

                <TextView
                    android:id="@+id/tv_system_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35px"
                    android:layout_toLeftOf="@+id/tv_system_read"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textSize="32px"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginTop="30px"
                android:background="@color/gray_f8f8f8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:scaleType="centerCrop"
                    app:layout_auto_baseheight="width"/>

                <TextView
                    android:id="@+id/tv_system_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="10px"
                    android:maxLines="2"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:text=""
                    android:textColor="@color/gray_999"
                    android:textSize="26px"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>