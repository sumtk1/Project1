<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_f5f5f5"
        android:orientation="vertical"
        android:paddingBottom="30px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="自定义时间"
                android:textColor="@color/black_333"
                android:textSize="30px"/>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="40px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:src="@drawable/ic_close_big"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="210px"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:background="@drawable/bg_white_4dp"
                android:gravity="center"
                android:hint="开始时间"
                android:text=""
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_666"
                android:textSize="28px"/>

            <View
                android:layout_width="20px"
                android:layout_height="2px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@color/gray_b4b4b4"/>

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="210px"
                android:layout_height="match_parent"
                android:background="@drawable/bg_white_4dp"
                android:gravity="center"
                android:hint="结束时间"
                android:text=""
                android:textColor="@color/gray_666"
                android:textColorHint="@color/gray_666"
                android:textSize="28px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="60px"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11"
                android:background="@drawable/bg_btn_green_4dp"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/white"
                android:textSize="32px"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11"
                android:background="@drawable/bg_btn_blue_4dp"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="32px"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>