<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.gloiot.hygounionmerchant.ui.activity.mine.printer.EditPrinterActivity">

    <include
        layout="@layout/include_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="终端号"
                    android:textColor="@color/black_555"
                    android:textSize="32px"/>

                <EditText
                    android:id="@+id/et_terminal_num"
                    style="@style/edittext_base"
                    android:layout_marginLeft="230px"
                    android:layout_marginRight="30px"
                    android:hint="请输入设备终端号"
                    android:text=""
                    android:textColor="@color/black_555"
                    android:textColorHint="@color/gray_bbb"
                    android:textSize="32px"/>

                <View
                    style="@style/line_horizontal"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="密钥"
                    android:textColor="@color/black_555"
                    android:textSize="32px"/>

                <EditText
                    android:id="@+id/et_secret_key"
                    style="@style/edittext_base"
                    android:layout_marginLeft="230px"
                    android:layout_marginRight="30px"
                    android:hint="请输入设备密钥"
                    android:text=""
                    android:textColor="@color/black_555"
                    android:textColorHint="@color/gray_bbb"
                    android:textSize="32px"/>

                <View
                    style="@style/line_horizontal"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="GPS卡号"
                    android:textColor="@color/black_555"
                    android:textSize="32px"/>

                <EditText
                    android:id="@+id/et_gps_card_num"
                    style="@style/edittext_base"
                    android:layout_marginLeft="230px"
                    android:layout_marginRight="30px"
                    android:hint="例：1064830105363"
                    android:text=""
                    android:textColor="@color/black_555"
                    android:textColorHint="@color/gray_bbb"
                    android:textSize="32px"/>

                <View
                    style="@style/line_horizontal"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="GPS序列号"
                    android:textColor="@color/black_555"
                    android:textSize="32px"/>

                <EditText
                    android:id="@+id/et_gps_serial_num"
                    style="@style/edittext_base"
                    android:layout_marginLeft="230px"
                    android:layout_marginRight="30px"
                    android:hint="例：838602B303135C0205363"
                    android:text=""
                    android:textColor="@color/black_555"
                    android:textColorHint="@color/gray_bbb"
                    android:textSize="32px"/>

                <View
                    style="@style/line_horizontal"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_confirm"
                style="@style/btn_green_pre"
                android:layout_marginTop="100px"
                android:text="确认修改"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
