<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.gloiot.hygounionmerchant.ui.activity.mine.BindingHygoAccountActivity">

    <include
        layout="@layout/include_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="环游购账户"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/tv_query"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10px"
                    android:paddingRight="30px"
                    android:text="查询"
                    android:textColor="@color/blue_449ffb"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/et_hygo_account"
                    style="@style/edittext_base"
                    android:layout_marginLeft="230px"
                    android:layout_marginRight="30px"
                    android:hint="请输入环游购账户"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="32px"/>

                <View
                    style="@style/line_horizontal"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="姓名"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="230px"
                    android:layout_marginRight="30px"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:singleLine="true"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="32px"/>

                <View
                    style="@style/line_horizontal"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="手机号"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/tv_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="230px"
                    android:layout_marginRight="30px"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="32px"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10px"
                android:padding="30px"
                android:text=""
                android:textColor="@color/gray_666"
                android:textSize="28px"/>

            <TextView
                android:id="@+id/tv_confirm"
                style="@style/btn_green_pre"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_marginTop="30px"
                android:text="确认绑定"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
