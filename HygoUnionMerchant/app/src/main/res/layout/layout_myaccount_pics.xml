<?xml version="1.0" encoding="utf-8"?>
<com.zyd.wlwsdk.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:background="@color/white"
                                     android:orientation="vertical">

    <LinearLayout
        android:layout_width="200px"
        android:layout_height="250px"
        android:layout_marginLeft="20px"
        android:background="@drawable/shape_border_gray_d0d0"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:scaleType="centerCrop"
            app:layout_auto_baseheight="width"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/gray_666"
            android:textSize="24px"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px">

            <TextView
                android:id="@+id/tv_symbol_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ï¿¥"
                android:textColor="@color/black_333"
                android:textSize="24px"/>

            <TextView
                android:id="@+id/tv_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/tv_symbol_money"
                android:layout_toRightOf="@id/tv_symbol_money"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black_333"
                android:textSize="36px"/>
        </RelativeLayout>

    </LinearLayout>

</com.zyd.wlwsdk.autolayout.AutoLinearLayout>