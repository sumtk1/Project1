<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.gloiot.hygounionmerchant.ui.activity.mine.bankcard.AddBankCardActivity">

    <include
        layout="@layout/include_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="银行卡信息"
                android:textColor="@color/gray_666"
                android:textSize="28px"/>

            <RelativeLayout
                android:id="@+id/rl_select_bank"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@drawable/bg_btn_white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="选择银行"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/tv_bank_name"
                    style="@style/textview_base_left"
                    android:layout_marginLeft="220px"
                    android:layout_marginRight="60px"
                    android:ellipsize="end"
                    android:hint="请选择银行"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="30px"/>

                <ImageView
                    style="@style/imageview_right"
                    android:src="@drawable/ic_arrow_right"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/gray_e5e5e5"/>

                <TextView
                    style="@style/textview_base_left"
                    android:text="开户行名称"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <EditText
                    android:id="@+id/et_branch_bank_name"
                    style="@style/edittext_base"
                    android:layout_marginLeft="220px"
                    android:layout_marginRight="30px"
                    android:hint="请输入支行名称"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="30px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/gray_e5e5e5"/>

                <TextView
                    style="@style/textview_base_left"
                    android:text="卡号"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <EditText
                    android:id="@+id/et_card_num"
                    style="@style/edittext_base"
                    android:layout_marginLeft="220px"
                    android:layout_marginRight="30px"
                    android:hint="请输入卡号"
                    android:inputType="number"
                    android:maxLength="20"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="30px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/gray_e5e5e5"/>

                <TextView
                    style="@style/textview_base_left"
                    android:text="卡类型"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/tv_card_type"
                    style="@style/textview_base_left"
                    android:layout_marginLeft="220px"
                    android:layout_marginRight="60px"
                    android:ellipsize="end"
                    android:hint=""
                    android:singleLine="true"
                    android:text="储蓄卡"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="30px"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="持卡人信息"
                android:textColor="@color/gray_666"
                android:textSize="28px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <TextView
                    style="@style/textview_base_left"
                    android:text="持卡人姓名"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <EditText
                    android:id="@+id/et_person_name"
                    style="@style/edittext_base"
                    android:layout_marginLeft="220px"
                    android:layout_marginRight="30px"
                    android:hint="请输入持卡人姓名"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="30px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/gray_e5e5e5"/>

                <TextView
                    style="@style/textview_base_left"
                    android:text="身份证号码"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <EditText
                    android:id="@+id/et_id_num"
                    style="@style/edittext_base"
                    android:layout_marginLeft="220px"
                    android:layout_marginRight="30px"
                    android:digits="0123456789xX"
                    android:hint="请输入身份证号码"
                    android:maxLength="18"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="30px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/gray_e5e5e5"/>

                <TextView
                    style="@style/textview_base_left"
                    android:text="手机号"
                    android:textColor="@color/gray_666"
                    android:textSize="32px"/>

                <EditText
                    android:id="@+id/et_phone_num"
                    style="@style/edittext_base"
                    android:layout_marginLeft="220px"
                    android:layout_marginRight="30px"
                    android:hint="请输入银行预留的手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/gray_ccc"
                    android:textSize="30px"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_confirm"
                style="@style/btn_green_commit"
                android:layout_marginBottom="30px"
                android:layout_marginTop="100px"
                android:text="确认"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
