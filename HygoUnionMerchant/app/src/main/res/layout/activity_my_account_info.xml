<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.gloiot.hygounionmerchant.ui.activity.mine.accountinfo.MyAccountInfoActivity">

    <include
        layout="@layout/include_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_shop_pic"
                android:layout_width="match_parent"
                android:layout_height="420px">

                <ImageView
                    android:id="@+id/iv_top_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_top_name"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:layout_alignParentBottom="true"
                    android:background="#22000000"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="28px"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_brief_introduction_title"
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text=""
                android:textColor="@color/black_333"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_brief_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:lineSpacingExtra="10px"
                android:minHeight="120px"
                android:paddingBottom="20px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="10px"
                android:text=""
                android:textColor="@color/gray_666"
                android:textSize="30px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_dfdfdf"/>

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/ic_dizhi"
                    app:layout_auto_baseheight="width"/>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100px"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_333"
                    android:textSize="32px"/>

                <View
                    style="@style/line_horizontal"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/white">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/ic_dianhua"
                    app:layout_auto_baseheight="width"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100px"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black_333"
                    android:textSize="32px"/>

                <View
                    style="@style/line_horizontal"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_commodity_title"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text=""
                android:textColor="@color/black_333"
                android:textSize="26px"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:background="@color/white"
                android:paddingLeft="10px"
                android:paddingRight="10px"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:background="@color/white"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
