<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="24px">

        <TextView
            android:id="@+id/tv_system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_bg_d4d4d4_4px"
            android:padding="11px"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="24px"/>

        <RelativeLayout
            android:id="@+id/rl_bill"
            android:layout_width="match_parent"
            android:layout_height="154px"
            android:layout_marginTop="24px"
            android:background="@drawable/bg_dialog"
            android:paddingLeft="24px"
            android:paddingRight="24px">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="106px"
                android:layout_height="106px"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                app:layout_auto_baseheight="width"/>

            <TextView
                android:id="@+id/tv_system_read"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35px"
                android:background="@drawable/bg_message_read"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="30px"
                android:layout_toRightOf="@id/iv_pic"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textSize="28px"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="20px"
                android:layout_marginTop="15px"
                android:layout_toRightOf="@id/iv_pic"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/red_ff436f"
                android:textSize="38px"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>