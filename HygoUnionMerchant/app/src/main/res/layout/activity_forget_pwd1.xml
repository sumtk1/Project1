<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.gloiot.hygounionmerchant.ui.activity.login.ForgetPwd1Activity">

    <include
        layout="@layout/include_titlebar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px">

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/black_333"
            android:textColorHint="@color/gray_ccc"
            android:textSize="30px"/>

        <View
            style="@style/line_horizontal"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px">

        <com.gloiot.hygounionmerchant.widget.TimeButton
            android:id="@+id/tv_getyzm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/blue_449ffb"
            android:textSize="32px"/>

        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@id/tv_getyzm"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/black_333"
            android:textColorHint="@color/gray_ccc"
            android:textSize="30px"/>

        <View
            style="@style/line_horizontal"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_next"
        style="@style/btn_green_pre"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="80px"
        android:text="下一步"/>

</LinearLayout>
