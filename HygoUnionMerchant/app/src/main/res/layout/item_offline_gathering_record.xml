<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_white">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="126px">

            <TextView
                android:id="@+id/tv_odd_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="24px"
                android:text=""
                android:textColor="@color/gray_666"
                android:textSize="28px"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_odd_num"
                android:layout_marginLeft="30px"
                android:layout_marginTop="16px"
                android:text=""
                android:textColor="@color/gray_999"
                android:textSize="24px"/>

            <ImageView
                style="@style/imageview_right"
                android:src="@drawable/ic_arrow_right"
                android:visibility="visible"/>

            <View style="@style/line_horizontal"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_below="@id/rl_top"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tv_left"
                        style="@style/black555_pint_16"
                        android:layout_marginLeft="0px"
                        android:text="交易金额"
                        android:textColor="@color/gray_666"
                        android:textSize="24px"/>

                    <TextView
                        android:id="@+id/tv_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_left"
                        android:layout_marginBottom="-6px"
                        android:layout_marginLeft="10px"
                        android:layout_toRightOf="@id/tv_left"
                        android:text="￥"
                        android:textColor="@color/blue_449ffb"
                        android:textSize="24px"/>

                    <TextView
                        android:id="@+id/tv_jiaoyi"
                        style="@style/black555_pint_16"
                        android:layout_marginLeft="8px"
                        android:layout_toRightOf="@id/tv_01"
                        android:text=""
                        android:textColor="@color/blue_449ffb"
                        android:textSize="32px"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="32px"
                android:layout_gravity="center_vertical"
                android:background="#F3F3F3"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tv_right"
                        style="@style/black555_pint_16"
                        android:layout_marginLeft="0px"
                        android:text="到账金额"
                        android:textColor="@color/gray_666"
                        android:textSize="24px"/>

                    <TextView
                        android:id="@+id/tv_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_right"
                        android:layout_marginBottom="-6px"
                        android:layout_marginLeft="10px"
                        android:layout_toRightOf="@id/tv_right"
                        android:text="￥"
                        android:textColor="@color/blue_449ffb"
                        android:textSize="24px"/>

                    <TextView
                        android:id="@+id/tv_daozhang"
                        style="@style/black555_pint_16"
                        android:layout_marginLeft="8px"
                        android:layout_toRightOf="@id/tv_02"
                        android:text=""
                        android:textColor="@color/blue_449ffb"
                        android:textSize="32px"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>