<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/green_21d1c1</item>
        <item name="android:textColorPrimary">@color/gray_666</item>
    </style>

    <!-- 主页的tab格式 -->
    <style name="main_bottom_radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20px</item>
        <item name="android:textColor">@color/color_main_radiobutton_tabtext</item>
        <item name="android:padding">10px</item>
    </style>

    <!-- 首页上传window -->
    <style name="main_publishdialog_style" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- 选择图片动画-->
    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!--绿色的提交按钮基本样式（无背景，需手动添加）-->
    <style name="base_btn_green">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32px</item>
    </style>

    <!--绿色按钮的不可点击状态）-->
    <style name="btn_green_pre" parent="@style/base_btn_green">
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/bg_green_disable_4dp</item>
    </style>

    <!--绿色的提交按钮-->
    <style name="btn_green_commit" parent="@style/base_btn_green">
        <item name="android:background">@drawable/bg_btn_green_4dp</item>
    </style>

    <!--左侧竖直居中的imageview-->
    <style name="left_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--水平线-->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/gray_e0e0e0</item>
    </style>

    <!--字号为14sp的Edittext-->
    <style name="edittext_14sp_black_333">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:textColorHint">@color/gray_b4b4b4</item>
        <item name="android:textSize">28px</item>
    </style>

    <!--高度96px相对布局条目-->
    <style name="style_relativelayout_96">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96px</item>
    </style>

    <!--距左边距30px浅黑色16sp字体样式-->
    <style name="black555_pint_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/black_555</item>
    </style>

    <!--条目EditText样式-->
    <style name="edit_hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/gray_bbb</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">@color/black_555</item>
    </style>

    <!--距右边距30pxTextView字体样式-->
    <style name="text_right_28">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">@color/black_555</item>
    </style>

    <!--EditText基础样式-->
    <style name="edittext_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--距右边距30px的imageview样式-->
    <style name="imageview_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">30px</item>
    </style>

    <!--左侧textview基础样式-->
    <style name="textview_base_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">30px</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#2196f3</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>

</resources>
